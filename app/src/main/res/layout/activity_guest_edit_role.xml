<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_role"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.naman.eventplanning.GuestEditRole"
    android:weightSum="1">

    <TextView
        android:id="@+id/etEditEventName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textView"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_weight="0.04"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/etEditEventName"
        android:layout_alignLeft="@+id/editdesp"
        android:layout_alignStart="@+id/editdesp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/editdesp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:background="@drawable/budget_edittext_broder"/>

    <TextView
        android:id="@+id/textView2"
        android:text="People Needed Number"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_weight="0.04"
        android:layout_below="@+id/editdesp"
        android:layout_alignLeft="@+id/editdesp"
        android:layout_alignStart="@+id/editdesp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/etMoney"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/editdesp"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/editdesp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/budget_edittext_broder"/>

    <TextView
        android:id="@+id/textView3"
        android:text="Participated People"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_weight="0.04"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/editdesp"
        android:layout_alignStart="@+id/editdesp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_weight="0.04"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/editdesp"
        android:layout_alignStart="@+id/editdesp"
        android:layout_marginTop="15dp"
        android:background="@drawable/budget_edittext_broder"/>

    <Button
        android:id="@+id/add"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Add Myself to the Task"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="18dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:id="@+id/delete"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Delete Myself from the Task"
        android:layout_below="@+id/add"
        android:layout_marginTop="18dp"
        android:layout_alignLeft="@+id/add"
        android:layout_alignStart="@+id/add" />


    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_alignBaseline="@+id/back"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

</RelativeLayout>
