<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.naman.eventplanning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateVisible|adjustPan"
        android:launchMode = "singleInstance"
        android:theme="@style/AppTheme">

        <activity android:name=".home_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".EventActivity"/>
        <activity android:name=".AddEventActivity"/>

        <activity android:name=".UserAreaActivity" />
        <activity android:name=".AddEvent" />
        <activity android:name=".EditRole" />
        <activity android:name=".EditRole2" />
        <activity android:name=".EditRole3" />
        <activity android:name=".Messenger" />
        <activity android:name=".AddGuest" />
        <activity android:name=".MainActivity" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".LoginActivity" />
        <activity android:name=".EditBudget" />
        <activity android:name=".GuestEditRole"></activity>
    </application>

</manifest>